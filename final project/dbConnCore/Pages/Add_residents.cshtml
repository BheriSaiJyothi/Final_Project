@page
@model dbConnCore.Pages.Add_residentsModel
@{
    ViewData["Title"]= "Register";


    <h1>Add New Resident</h1>
    if (Model.success_msg.Length > 0)
    {
        <div>
            <div class="row-cols-1">
                <div class="alert alert-success alert-dismissible">
                    @Model.success_msg
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }
    if (Model.error_msg.Length >0)
    {
        <div>
            <div class="row-cols-1">
                <div class="alert alert-danger alert-dismissible">
                    @Model.error_msg
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }
    <form method="post">
        <div class="row row-cols-1">
           <label class="col-form-label">Resident Id</label>
           <div>
           <input type="number" class="form-control" name="Resident_Id" value="" required>
           </div>

                <label class="col-form-label">Resident Name</label>
                <div>
                    <input type="text" class="form-control" name="Resident_Name" value="" required>
                </div>
           

                <label class="col-form-label">Resident Email</label>
                <div>
                    <input type="text" class="form-control" name="Resident_Email" value="" required>
                </div>

                <label class="col-form-label">Resident Phone</label>
                <div>
                    <input type="text" class="form-control" name="Resident_Phone" value="" maxlength="10" required>
                </div>
            <label class="col-form-label">Resident Date</label>
            <div>
                <input type="datetime" class="form-control" name="Resident_Date" value="" required>
            </div>
            <label class="col-form-label">Resident Password</label>
            <div>
                <input type="password" class="form-control" name="Resident_Password" value="" required>
            </div>
                <br>
                <br>
                <br>
                <div>
                <button class="btn btn-success">SUBMIT</button>
                <a href="/login" type="reset" class="btn btn-danger">Cancel</a>
                </div>

        </div> 
    </form>


    }        